---
import "../../styles/global.css";
import type { HTMLAttributes } from "astro/types";

type ButtonType = "primary" | "secondary";
type Size = "sm" | "md";

type ButtonProps = HTMLAttributes<"button"> & {
	as?: "button";
	type?: ButtonType;
	size?: Size;
};

type AnchorProps = HTMLAttributes<"a"> & {
	as: "a";
	type?: ButtonType;
	size?: Size;
};

type Props = ButtonProps | AnchorProps;

const { as = "button", class: className, size, type, ...props } = Astro.props;

const Element = as;

const sizeClasses = size === "sm" ? "px-3 py-2" : "px-5 py-3";

const baseClasses =
	"inline-flex items-center justify-center gap-2 rounded-md text-sm font-semibold shadow-sm ring-1 ring-inset transition-colors";

const typeClasses =
	type === "primary"
		? "bg-[#ed3b26] text-[#0b0b0c] ring-[#ed3b26]/60 hover:bg-[#f24b38]"
		: "bg-white/5 text-zinc-200 ring-white/10 hover:bg-white/10";
---

<Element class:list={[baseClasses, sizeClasses, typeClasses, className]} {...props}>
    <slot />
</Element>
